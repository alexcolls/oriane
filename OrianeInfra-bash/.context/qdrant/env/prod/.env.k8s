# Kubernetes Environment Configuration
# ====================================

# Application Configuration
APP_NAME=oriane-vectordb
APP_VERSION=0.9.9
NAMESPACE=oriane-qdrant

# Qdrant Configuration
QDRANT_HOST=qdrant-prod
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_WEB_UI_PORT=6333
QDRANT_COLLECTION_NAME=oriane_vectors
QDRANT_VECTOR_SIZE=1536

# Resource Configuration
QDRANT_CPU_REQUEST=500m
QDRANT_CPU_LIMIT=2000m
QDRANT_MEMORY_REQUEST=1Gi
QDRANT_MEMORY_LIMIT=4Gi
QDRANT_STORAGE_SIZE=10Gi

# Replica Configuration
QDRANT_REPLICAS=3
QDRANT_MIN_REPLICAS=1
QDRANT_MAX_REPLICAS=5

# Storage Configuration
STORAGE_CLASS=standard
QDRANT_DATA_PATH=/qdrant/storage
BACKUP_STORAGE_CLASS=standard-rwo

# Security Configuration
ENABLE_TLS=true
TLS_SECRET_NAME=qdrant-tls
SERVICE_ACCOUNT_NAME=qdrant-sa

# Monitoring Configuration
ENABLE_PROMETHEUS_METRICS=true
METRICS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3000

# Network Configuration
LOAD_BALANCER_TYPE=ClusterIP
INGRESS_ENABLED=true
INGRESS_CLASS=nginx
INGRESS_HOST=qdrant.local
INGRESS_API_HOST=api.qdrant.local
INGRESS_GRPC_HOST=grpc.qdrant.local

# TLS/Certificate Configuration
CERT_MANAGER_ENABLED=true
CLUSTER_ISSUER=letsencrypt-prod
CERT_MANAGER_EMAIL=admin@example.com
TLS_SECRET_NAME=qdrant-tls-secret
GRPC_TLS_SECRET_NAME=qdrant-grpc-tls-secret

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_BURST=200
GRPC_RATE_LIMIT_REQUESTS_PER_MINUTE=500
GRPC_RATE_LIMIT_BURST=100
CONNECTION_LIMIT=200
REQUEST_SIZE_LIMIT=100m

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# Environment Specific Overrides
# These will be overridden in overlay configs
LOG_LEVEL=info
DEBUG_MODE=false
